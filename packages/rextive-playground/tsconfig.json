{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths - map rextive imports to source files for type checking */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "rextive": ["../rextive/src/index.ts"],
      "rextive/react": ["../rextive/src/react/index.ts"],
      "rextive/op": ["../rextive/src/op/index.ts"],
      "rextive/devtools": ["../rextive/src/devtools/index.ts"],
      "rextive/devtools-panel": ["../rextive/src/devtools-panel/index.ts"],
      "rextive/plugins": ["../rextive/src/plugins/index.ts"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["src"]
}
