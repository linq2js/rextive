{
  "name": "rextive-todo",
  "version": "1.0.0",
  "description": "Todo app with offline-first sync using rextive and miragejs",
  "type": "module",
  "scripts": {
    "dev": "rm -rf .vite node_modules/.vite && vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "miragejs": "^0.1.48",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rextive": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
