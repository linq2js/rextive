{
  "name": "rextive",
  "version": "2.38.0",
  "description": "A reactive state management library for React with explicit dependencies",
  "type": "module",
  "main": "./dist/rextive.js",
  "module": "./dist/rextive.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/rextive.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./immer": {
      "types": "./dist/immer/index.d.ts",
      "default": "./dist/immer/index.js"
    },
    "./op": {
      "types": "./dist/op.d.ts",
      "default": "./dist/op.js"
    },
    "./cache": {
      "types": "./dist/cache/index.d.ts",
      "default": "./dist/cache/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "default": "./dist/plugins/index.js"
    },
    "./devtools": {
      "types": "./dist/devtools/index.d.ts",
      "default": "./dist/devtools/index.js"
    },
    "./devtools-panel": {
      "types": "./dist/devtools-panel/index.d.ts",
      "default": "./dist/devtools-panel/index.js"
    },
    "./operators": {
      "types": "./dist/operators/index.d.ts",
      "default": "./dist/operators/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "watch": "npm run build:watch",
    "test": "vitest --no-watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --no-watch",
    "dry": "npm pack --dry-run",
    "preversion": "npm test && npm run build && (git diff --quiet && git diff --staged --quiet || (git add -A && git commit -m \"chore: prepare for release\"))",
    "version:patch": "npm version patch -m \"chore: bump version to %s\"",
    "version:minor": "npm version minor -m \"chore: bump version to %s\"",
    "version:major": "npm version major -m \"chore: bump version to %s\"",
    "postversion": "npm run sync:jsr-version && git add jsr.json && (git commit --amend --no-edit 2>/dev/null || git commit --no-edit -m \"chore: sync jsr version\") && git add -A && (git diff --staged --quiet || git commit --amend --no-edit 2>/dev/null || git commit --no-edit -m \"chore: sync jsr version\") && ./scripts/git-sync.sh && git push && git push --tags",
    "prepublishOnly": "npm run build",
    "sync:jsr-version": "node -e \"const pkg=require('./package.json');const jsr=require('./jsr.json');jsr.version=pkg.version;require('fs').writeFileSync('./jsr.json',JSON.stringify(jsr,null,2)+'\\n')\"",
    "postpublish": "git add -A && (git diff --staged --quiet || git commit -m \"chore: post-publish sync\") && ./scripts/git-sync.sh && git push",
    "pu:pa": "npm run version:patch && npm publish",
    "pu:mi": "npm run version:minor && npm publish",
    "pu:ma": "npm run version:major && npm publish",
    "jsr:publish": "npx jsr publish --allow-dirty"
  },
  "keywords": [
    "state",
    "management",
    "reactive",
    "react",
    "signals",
    "explicit",
    "dependencies"
  ],
  "author": "linq2js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linq2js/rextive.git",
    "directory": "packages/rextive"
  },
  "peerDependencies": {
    "immer": "^9.0.0 || ^10.0.0",
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "immer": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.45",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "immer": "^10.2.0",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "react-error-boundary": "6.0.0",
    "terser": "^5.36.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.1.0",
    "yup": "^1.7.1",
    "zod": "^4.1.13"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
